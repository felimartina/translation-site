<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Felipe Martina">
    <title>@Html.Raw(@TranslationsSite.Resources.Shared.General.CompanyName)</title>
    @Styles.Render("~/content/startbootstrap")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Page Level CSS -->
    @Styles.Render("~/Content/themes/startbootstrap-modern-business-1.0.3/plugins/language-selector/languages.min.css")
    @Styles.Render("~/Content/Site.css")
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">@Html.Raw(@TranslationsSite.Resources.Shared.General.CompanyName)</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="nav-link" href="@Url.Action("Index", "HowDoWeWork")">@Html.Raw(@TranslationsSite.Resources.Shared.General.HowDoWeWork_Button)</a></li>
                    <li><a class="nav-link" href="@Url.Action("Index", "GetQuote")">@Html.Raw(@TranslationsSite.Resources.Shared.General.GetAFreeQuote_Button)</a></li>
                    <li><a class="nav-link" href="@Url.Action("Index", "WhoAreWe")">@Html.Raw(@TranslationsSite.Resources.Shared.General.WhoAreWe_Button)</a></li>
                    <li><a class="nav-link" href="@Url.Action("Index", "ContactUs")">@Html.Raw(@TranslationsSite.Resources.Shared.General.ContactUs_Button)</a></li>
                    <!-- Language Dropdown -->
                    <li>
                        @if (this.ViewContext.RouteData.Values["language"] == null || (string)this.ViewContext.RouteData.Values["language"] == "en")
                        {
                            <a href="@Url.Action("Index", "Home", new { language = "es" })" class="nav-link btn">
                                <span class="lang-sm" lang="es"></span>
                            </a>
                        }
                        else if ((string)this.ViewContext.RouteData.Values["language"] == "es")
                        {
                            <a href="@Url.Action("Index", "Home", new { language = "en" })" class="nav-link btn">
                                <span class="lang-sm" lang="en"></span>
                            </a>
                        }
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @RenderSection("Header", required: false)

    <div class="container">
        @RenderBody()
    </div>
    <footer>
        <div class="col-md-12 text-center">
            <p>@Html.Raw(@TranslationsSite.Resources.Shared.General.CompanyName)</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/startbootstrap")
    <!-- Page Level Scripts -->
    @RenderSection("PageScripts", required: false)
</body>
</html>
