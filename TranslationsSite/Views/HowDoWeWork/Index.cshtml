@{
    ViewBag.Title = string.Format("{0} - {1}", @TranslationsSite.Resources.Shared.General.CompanyName, @TranslationsSite.Resources.HowDoWeWork.Index.HowDoWeWork_Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageMetaAttributes{
    @Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Tag_Meta_Description)
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.HowDoWeWork_Title)
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">@TranslationsSite.Resources.Home.Index.Home_Title</a>
            </li>
            <li class="active">@TranslationsSite.Resources.HowDoWeWork.Index.HowDoWeWork_Title</li>
        </ol>
    </div>
    <div class="col-md-12">
        <div class="lead">
            <p>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.HowDoWeWork_Description)</p>
            <h3><strong>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Services_Header)</strong></h3>
            <p>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Services_Description)</p>
            <h3><strong>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Guarantees_Header)</strong></h3>
            <p>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Guarantees_Description)</p>
            <h3><strong>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Confidentiality_Header)</strong></h3>
            <p>@Html.Raw(@TranslationsSite.Resources.HowDoWeWork.Index.Confidentiality_Description)</p>
        </div>
    </div>
</div>