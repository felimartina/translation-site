@{
    ViewBag.Title = string.Format("{0} - {1}", @TranslationsSite.Resources.Shared.General.CompanyName, @TranslationsSite.Resources.ContactUs.Index.ContactUs_Title);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageMetaAttributes{
    @Html.Raw(@TranslationsSite.Resources.ContactUs.Index.Tag_Meta_Description)
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Html.Raw(@TranslationsSite.Resources.ContactUs.Index.ContactUs_Title)
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active">@TranslationsSite.Resources.ContactUs.Index.ContactUs_Title</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <h3>@TranslationsSite.Resources.ContactUs.Index.Form_Header</h3>
        <form name="sentMessage" id="contactForm" novalidate="">
            <div class="control-group form-group">
                <div class="controls">
                    <label>@TranslationsSite.Resources.ContactUs.Index.Form_Name</label>
                    <input type="text" class="form-control" id="name" required="" data-validation-required-message="@TranslationsSite.Resources.ContactUs.Index.Form_Name_Error_Required">
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@TranslationsSite.Resources.ContactUs.Index.Form_Phone</label>
                    <input type="tel" class="form-control" id="phone" required="" data-validation-required-message="@TranslationsSite.Resources.ContactUs.Index.Form_Phone_Error_Required">
                    <div class="help-block"></div>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@TranslationsSite.Resources.ContactUs.Index.Form_Email</label>
                    <input type="email" class="form-control" id="email" required="" data-validation-required-message="@TranslationsSite.Resources.ContactUs.Index.Form_Email_Error_Required">
                    <div class="help-block"></div>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@TranslationsSite.Resources.ContactUs.Index.Form_Message</label>
                    <textarea rows="10" cols="100" class="form-control" id="message" required="" data-validation-required-message="@TranslationsSite.Resources.ContactUs.Index.Form_Message_Error_Required" maxlength="999" style="resize:none"></textarea>
                    <div class="help-block"></div>
                </div>
            </div>
            <div class="col-sm-12">
                <div id="success" class="alert alert-success hidden">@TranslationsSite.Resources.ContactUs.Index.Form_Submit_Success</div>
                <div id="fail" class="alert alert-danger hidden">@TranslationsSite.Resources.ContactUs.Index.Form_Submit_Error</div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">@TranslationsSite.Resources.ContactUs.Index.Form_Submit</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h3>@TranslationsSite.Resources.ContactUs.Index.ContactDetails</h3>
        @*<p>
                3481 Melrose Place<br>Beverly Hills, CA 90210<br>
            </p>*@
        <p>
            <i class="fa fa-phone"></i>
            @*<abbr title="Phone">P</abbr>*@: @TranslationsSite.Resources.ContactUs.Index.ContactDetails_Phone
        </p>
        <p>
            <i class="fa fa-envelope-o"></i>
            @*<abbr title="Email">E</abbr>*@: <a href="mailto:@TranslationsSite.Resources.ContactUs.Index.ContactDetails_Email">@TranslationsSite.Resources.ContactUs.Index.ContactDetails_Email</a>
        </p>
        <p>
            <i class="fa fa-clock-o"></i>
            @*<abbr title="Hours">H</abbr>*@: @TranslationsSite.Resources.ContactUs.Index.ContactDetails_WorkingHours
        </p>
        @*<ul class="list-unstyled list-inline list-social-icons">
                <li>
                    <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
                </li>
                <li>
                    <a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
                </li>
            </ul>*@
    </div>
</div>

@section PageScripts
{
    <script src="~/Scripts/jqBootstrapValidation.js"></script>
    <script src="~/Scripts/controller_contactus.js"></script>
}
